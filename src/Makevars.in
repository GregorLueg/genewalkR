TARGET_DIR = ./rust/target
LIBDIR = $(TARGET_DIR)/@LIBDIR@
STATLIB = $(LIBDIR)/libgenewalkR.a
LIBTORCH = @LIBTORCH_PATH@
LIBTORCH_LIB = $(LIBTORCH)/lib
PKG_LIBS = -L$(LIBDIR) -lgenewalkR -L$(LIBTORCH_LIB) -ltorch_cpu -ltorch -lc10 -Wl,-rpath,$(LIBTORCH_LIB)

# updated here to add libtorch to the path to be able to link what R
# does to the Rust part...

.PHONY: $(STATLIB)

$(SHLIB): $(STATLIB)

$(STATLIB):
	cargo build --lib @PROFILE@ --manifest-path=./rust/Cargo.toml --target-dir=$(TARGET_DIR)

clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS) @CLEAN_TARGET@